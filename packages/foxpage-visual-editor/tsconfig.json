{
  "compilerOptions": {
    // editor
    "charset": "utf-8",
    "newLine": "LF",
    // syntax
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es7",
      "esnext"
    ],
    "jsx": "react",
    // compile
    "rootDirs": [
      "."
    ],
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    // "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "locale": "zh-cn",
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@/types/*": [
        "typings/*"
      ]
    }
  },
  "include": [
    "src/*",
    "src/**/*",
    "typings/*",
    "typings/**/*"
    ],
  "exclude": [
    "node_modules"
  ]
}
